@model OnSale.Common.Entities.City

@{
    ViewData["Title"] = "Agregar Ciudad";
}

<h2>Agregar</h2>

<h4>Ciudad</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCity">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdState" />

            <partial name="_City" />

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="DetailsDepartment" asp-route-id="@Model.IdState" class="btn btn-success">Regresar a Estado</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
